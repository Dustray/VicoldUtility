<Window x:Class="VicoldUtility.Retirement.SetDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VicoldUtility.Retirement"
        mc:Ignorable="d"
        Title="设置目标日期" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="目标日期:" VerticalAlignment="Center"/>
            <DatePicker x:Name="TargetDatePicker" Margin="5,0,0,0"/>
        </StackPanel>

        <Button Grid.Row="1" Content="确定" Click="ConfirmButton_Click" Width="100" Margin="10"/>
    </Grid>
</Window>
