<Page
    x:Class="CommanderTerminal.CommandPad.PasswordInputPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommanderTerminal.CommandPad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBox     Name="UserText"   Header="User:"     Margin="5" TextChanged="Text_PasswordChanged"/>
        <PasswordBox Name="PasswdText" Header="Password"  Margin="5" PasswordChanged="Text_PasswordChanged"/>
        <InfoBar 
            x:Name="LogInfo"
            Grid.ColumnSpan="2"
            Grid.Row="7"
            Margin="5 0 5 5"
            IsOpen="False"
            Severity="Informational"
            Title=""
            Message="" />
    </StackPanel>
</Page>
