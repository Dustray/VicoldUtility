<Window x:Class="FileHeadFormatter.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileHeadFormatter"
        mc:Ignorable="d"
        Title="ConfirmWindow" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition  Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox Grid.ColumnSpan="2" x:Name="ConfirmText"  TextWrapping="Wrap" AcceptsReturn="True" />

        <Button Grid.Row="1" Grid.Column="0" x:Name="OKButton"     Content="确定" Background="#3467e2" Margin="5" Foreground="#fff" Click="OKButton_Click"     IsDefault="True"/>
        <Button Grid.Row="1" Grid.Column="1" x:Name="CancelButton" Content="取消" Background="#888"    Margin="5" Foreground="#fff" Click="CancelButton_Click" IsCancel="True"/>
    </Grid>
</Window>
