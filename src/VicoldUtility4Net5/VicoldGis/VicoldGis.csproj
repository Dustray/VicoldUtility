    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="VMap\Utilities\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="HighContour">
      <HintPath>Libs\HighContour.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Libs\HighContour.dll">
