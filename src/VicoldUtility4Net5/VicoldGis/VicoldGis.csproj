    <Content Include="Data\map\countiesb2b.ctl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\map\global2b.adr">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
