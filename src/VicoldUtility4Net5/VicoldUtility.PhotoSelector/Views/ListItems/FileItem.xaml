<UserControl x:Class="VicoldUtility.PhotoSelector.Views.ListItems.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VicoldUtility.PhotoSelector.Views.ListItems"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid Background="#fff" Height="35">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Image x:Name="ImgThumbnail" Source="/Resources/thumbnail_small.png" Stretch="UniformToFill" Margin="2" />
        <TextBlock Grid.Column="1" x:Name="TextFileName" Text="thumbnail_small.png"  ToolTip="" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        <StackPanel Grid.Column="2" Orientation="Horizontal" FlowDirection="RightToLeft"> 
            
        </StackPanel>
    </Grid>
</UserControl>
