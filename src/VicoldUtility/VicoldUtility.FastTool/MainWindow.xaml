<Window x:Class="VicoldUtility.FastTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VicoldUtility.FastTool"
        mc:Ignorable="d"
        Title="快速工具集" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Name="TabMain" Background="Transparent" Margin="3" Style="{DynamicResource MainTabControlStyle}">
           
        </TabControl>
        <GridSplitter Height="3"  Background="#0000" HorizontalAlignment ="Stretch"  VerticalAlignment ="Bottom"/>
        <TextBox  Grid.Row="1" Margin="3 0 3 3" Background="#eee" Name="tboxLog" TextWrapping="Wrap" BorderBrush="#aaa"/>

    </Grid>
</Window>
